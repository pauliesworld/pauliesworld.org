# Path variables
$URL =          "http://www.pauliesworld.org/";
$BLOGURL =      "http://blog.pauliesworld.org/";
$HOME =         "/home/paulie/";
$HOMEDIR =      "${HOME}www/";
$SRCDIR =       "${HOME}release/src/";
$CNTDIR =       "${HOME}release/content/";
$BLOGDIR =      "${HOME}release/content/blog/";
$PRJTDIR =      "${HOME}release/content/projects/";
$TRAVDIR =	"${HOME}release/content/travels/";

# Binary paths
$DATE =         "/bin/date";
$BASENAME =     "/bin/basename";

# Kionic hosting does not have Parse and FormatText by default, so have to
# install into a local directory and reference the modules via a local library
# path.
use lib '/home/paulie/perl/usr/lib/perl5/site_perl/5.8.8/';

# Perl modules necessary to run PauliesWorld.org
use CGI qw(:param);
use CGI::Carp qw(fatalsToBrowser);
use Fcntl qw(:DEFAULT :flock);
use File::Basename;
use Digest::MD5 qw(md5 md5_hex md5_base64);
use HTML::Parse;
use HTML::FormatText;

# Include in all necessary Perl source files
require "${SRCDIR}framework.pl";
require "${SRCDIR}home.pl";
require "${SRCDIR}content.pl";
require "${SRCDIR}about.pl";
require "${SRCDIR}sourceview.pl";
require "${SRCDIR}projects.pl";
require "${SRCDIR}travels.pl";
require "${SRCDIR}files.pl";
require "${SRCDIR}resume.pl";

1;
